<!DOCTYPE html>
<html lang="en">

<head>
    <title>asd project</title>
    <style>
        html,
        body {
            margin: 0;
        }
        
        body {
            background-color: aquamarine;
        }
        
        table,
        td,
        th {
            border: 3px solid black;
            text-align: left;
        }
        
        table {
            border-collapse: collapse;
            width: 50%;
        }
        
        header {
            background-color: grey;
            color: white;
            text-align: center;
            height: 3em;
            padding: 1%;
            padding-top: 5px;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        
        .table-data {
            margin-left: 33%;
            margin-top: 10%;
            text-align: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            text-align: center;
            font-weight: bold;
            font-style: oblique;
        }
        
        .para {
            margin-left: 2%;
            margin-top: 5%;
            text-align: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            text-align: center;
            font-weight: bold;
            font-style: oblique;
        }
        
        th,
        td {
            padding: 15px;
        }
    </style>
</head>

<body>
    <header>
        <h2>Data</h2>
    </header>
    <div class="para">
        <h3>Here are the details of the patients</h3>
    </div>
    <div class="table-data">

        <table border="1">
            <tr>
                <th>sno</th>
                <th>name</th>
                <th>disease</th>
                <!-- <th>City</th>
            <th>Country</th> -->
                <th>Edit</th>
                <th>Delete</th>
            </tr>

            <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
                <tr>
                    <td>
                        <%=i; %>
                    </td>
                    <td>
                        <%=data.name %>
                    </td>
                    <td>
                        <%=data.designation%>
                    </td>
                    <!-- <td><%=data.city %></td>
            <td><%=data.country %></td> -->
                    <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
                    <td><a href="/users/delete/<%=data.id%>">Delete</a></td>
                </tr>
                <%  i++; }) %>
                    <% } else{ %>
                        <tr>
                            <td colspan="7">No Data Found</td>
                        </tr>
                        <% } %>
        </table>
    </div>
</body>

</html>